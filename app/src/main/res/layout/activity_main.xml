<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSingleBtn"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/single_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTwoBtn"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/two_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSingleBtn" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/three_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTwoBtn" />
</android.support.constraint.ConstraintLayout>